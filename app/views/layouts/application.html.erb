<!DOCTYPE html>
<html>
  <head>
    <title>AZ-Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', 'https://fonts.googleapis.com/css?family=Open+Sans|Roboto&display=swap', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

    <div>
      <% if flash[:message] %>
        <p><%= flash[:message] %></p>
      <% end %>
    </div>

    <%= render 'layouts/navigation' %>
    <%= yield %>
  </body>
</html>
