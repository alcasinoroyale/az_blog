<%= form_for @user do |f| %>
  <p><%= f.label :username %><br><%= f.text_field :username, :class => 'form-control' %></p>
  <p><%= f.label :email %><br><%= f.email_field :email, :class => 'form-control' %></p>
  <p><%= f.label :password %><br><%= f.password_field :password, :class => 'form-control' %></p>
  <%= f.submit :class => 'submit-button' %>

  <div class="message">
    <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    <% end %>
  </div>

<% end %>

<% if current_user %>

<h2>Profile Info</h2>
  <%= form_for @user do |f| %>
    <p><%= f.label :bio %><br><%= f.text_field :bio, :class => 'form-control' %></p>
    <p><%= f.label :interests %><br><%= f.text_field :interests, :class => 'form-control' %></p>
    <p><%= f.label :location %><br><%= f.text_field :location, :class => 'form-control' %></p>
    <%= f.submit "Update Info", :class => 'submit-button' %>
  <% end %>
<% end %>
